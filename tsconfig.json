{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },

    "filesGlob": [
        "./**/*.ts"
    ],

    "files": [
        "./app.ts",
        "./models.ts",
        "./main.ts",
        "./typings/angular2/angular2.d.ts",
        "./typings/aurelia/aurelia.d.ts",
        "./typings/aurelia/aurelia-validation.d.ts"
    ]
}